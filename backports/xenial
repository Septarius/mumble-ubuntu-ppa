#! /usr/bin/perl
#
# Hook for automatic backports.
#
# Target dist: Ubuntu Xenial

use warnings;
use strict;
use Carp;

my $first = 1;
my $file = '';
my $field = '';

open(F, "debian/control") or croak;
while(<F>) {
  chomp();
  if (/^(\S+):/) {
    $field = $1;
  }
  if ($first) {
    $file .= $_;
    $first = 0;
  } elsif (/^$/) {
    $file .= "\n";
  } elsif ($field eq 'Description' || /^[^ ]/ || /^$/) {
    $file .= "\n" . $_;
  } else {
    $file .= $_;
  }
}
close(F);

$file .= "\n";

$file =~ s/ice34/ice35/g;
$file =~ s/g\+\+\-4\.6, //g;

open(F, ">debian/control") or croak;
print F $file;
close(F);

$file = '';


open(F, "debian/rules") or croak;
while(<F>) {
  $file .= $_;
}
close(F);

$file .= "\n";
$file =~ s/QMAKE_CXX=g\+\+\-4\.6 QMAKE_CC=gcc-4\.6 //g;

open(F, ">debian/rules") or croak;
print F $file;
close(F);
